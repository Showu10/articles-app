<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Notes App</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1>Notes App</h1>
    <h2>Add New Note</h2>
    <form method="POST" action="/notes">
      <input type="text" name="title" placeholder="Title" required />
      <br />
      <textarea
        type="text"
        name="article"
        placeholder="Content"
        required
      ></textarea>
      <br />
      <button type="submit">Submit</button>
    </form>
    <h2>All Notes</h2>
    <ul>
      <% articles.forEach(article => { %>
      <li>
        <h3><%= article.title %></h3>
        <p><%- article.article.replace(/\n/g, '<br>') %></p>
        <a href="/notes/<%= article._id %>">View</a>
      </li>
      <% }) %>
    </ul>
    <button><a style="color: white;" href="/api/notes">Access API</a></button>
  </body>
</html>
